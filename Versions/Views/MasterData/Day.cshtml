@using Household.Localisation.Common
@using Household.Localisation.Main.MasterData

@model Household.BL.DATA.txx.CDayData

<div class="row">
	<div class="col-xs-12">
		<h3>@DayText.Day</h3>
	</div>
	<div class="col-xs-12 mB10">
		<input type="button" class="button-default" id="btnSave" value="@GeneralText.Save" onclick="Day.Save();" />
		<input type="button" class="button-default" value="@DayText.Multiple" onclick="Day.ShowMultiple();" />
		<input type="button" class="button-default" id="btnDelete" value="@GeneralText.Delete" onclick="Day.Delete();" />
		<input type="button" class="button-default" id="btnClose" value="@GeneralText.Close" onclick="Common.hideSubContent();" />
	</div>
	<div class="col-xs-12">
		<ul class="" id="ulError"></ul>
	</div>
</div>

<div id="divMultiple" class="row invisible">
	<div class="col-xs-12 col-sm-6">
		<span>@DayText.Start</span>
		<input type="text" id="tbxStart" value="1" />
	</div>
	<div class="col-xs-12 col-sm-6">
		<span>@DayText.End</span>
		<input type="text" id="tbxEnd" value="31" />
	</div>
</div>

<form class="row">
	@Html.EditorForModel()
</form>

<script type="text/javascript">
	(function () {
		if(@Model.ID < 1){$('#btnDelete').remove();}
	})();
</script>