@using Household.Localisation.Common
@using Household.Localisation.Main.Finance

@model Household.Models.Finance.CPurchaseModel

<div class="row">
	<div class="col-xs-12">
		<h3>@PurchaseText.Purchase</h3>
	</div>
	<div class="col-xs-12 mB10">
		<input type="button" class="button-default" id="btnSave" value="@GeneralText.Save" onclick="Purchase.Save();" />
		<input type="button" class="button-default" id="btnDelete" value="@GeneralText.Delete" onclick="Purchase.Delete();" />
		<input type="button" class="button-default" id="btnClose" value="@GeneralText.Close" onclick="Common.hideSubContent();" />
	</div>
	<div class="col-xs-12">
		<ul class="" id="ulError"></ul>
	</div>
</div>
<form class="row">
	@Html.DisplayForModel()
</form>

<script type="text/javascript">
	(function () {
		if(@Model.Purchase.ID < 1){$('#btnDelete').remove();}
	})();
</script>